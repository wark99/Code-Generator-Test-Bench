{
  "swagger": "2.0",
  "info": {
    "description": "Loans API",
    "version": "2.0",
    "title": "Loans API"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Loans",
      "description": "Loans API"
    }
  ],
  "paths": {
    "/loans": {
      "post": {
        "tags": [
          "Loans"
        ],
        "summary": "Apply for a loan",
        "description": "One loan application request supported in the body.",
        "operationId": "applyForALoanUsingPOST",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "loanRequest",
            "description": "loanRequest",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LoanRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/LoanResponse"
            }
          }
        },
        "deprecated": false
      }
    }
  },
  "definitions": {
    "BankAccount": {
      "type": "object",
      "properties": {
        "accountNumber": {
          "type": "string",
          "example": 1234567890,
          "description": "Account number"
        },
        "bankName": {
          "type": "string",
          "description": "Name of the bank",
          "enum": [
            "SCRUM_BANK",
            "ICONIC_BANK",
            "MINIONS_BANK",
            "MOLEWA_BANK"
          ]
        }
      },
      "title": "BankAccount"
    },
    "LoanRequest": {
      "type": "object",
      "properties": {
        "bankAccount": {
          "description": "Bank Account",
          "$ref": "#/definitions/BankAccount"
        },
        "idNumber": {
          "type": "string",
          "example": 9901025391084,
          "description": "ID Number of the applicant"
        },
        "name": {
          "type": "string",
          "example": "Pontsho",
          "description": "Name of the applicant"
        },
        "surname": {
          "type": "string",
          "example": "Molewa",
          "description": "surname of the applicant"
        }
      },
      "title": "LoanRequest"
    },
    "LoanResponse": {
      "type": "object",
      "required": [
        "validationStatus"
      ],
      "properties": {
        "errors": {
          "type": "array",
          "description": "Validation errors",
          "items": {
            "type": "string"
          }
        },
        "reference": {
          "type": "string",
          "format": "uuid",
          "description": "Generated reference number for you application"
        },
        "validationStatus": {
          "type": "boolean",
          "example": false,
          "description": "Indicates whether the validation is a success/failure"
        },
        "warnings": {
          "type": "array",
          "description": "Validation warnings",
          "items": {
            "type": "string"
          }
        }
      },
      "title": "LoanResponse"
    }
  }
}